<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:text="Pesan"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/ukuranHurufTombol"
            android:background="@color/purple_500"
            android:onClick="TampilkanPesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btPesanDua"
            android:text="Pesan Dua"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/ukuranHurufTombol"
            android:background="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nama Anda" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Nama Anda Di sini" />

        <Button
            android:id="@+id/btTampilkanNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/warnabackground"
            android:text="Tampilkan Nama"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/ukuranHurufTombol" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bilangan Satu"
            android:textSize="@dimen/ukuranHurufTombol" />

        <EditText
            android:id="@+id/etBil1"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Bilangan Satu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bilangan Dua"
            android:textSize="@dimen/ukuranHurufTombol" />

        <EditText
            android:id="@+id/etBil2"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Bilangan Dua" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Hasil"
            android:textSize="@dimen/ukuranHurufTombol" />

        <EditText
            android:id="@+id/etHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hasil Perhitungan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btTambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/warnabackground"
                android:text="Tambah"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ukuranHurufTombol" />
            <Button
                android:id="@+id/btKurang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/warnabackground"
                android:text="Kurang"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ukuranHurufTombol" />
            <Button
                android:id="@+id/btKali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/warnabackground"
                android:text="Kali"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ukuranHurufTombol" />
            <Button
                android:id="@+id/btBagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/warnabackground"
                android:text="Bagi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ukuranHurufTombol" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/warnabackground"
                android:text="While"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ukuranHurufTombol" />

            <Button
                android:id="@+id/btDoWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/warnabackground"
                android:text="Do..While"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ukuranHurufTombol" />

            <Button
                android:id="@+id/btFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/warnabackground"
                android:text="For"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ukuranHurufTombol" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBilangan"
            android:textSize="@dimen/ukuranHurufTombol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>